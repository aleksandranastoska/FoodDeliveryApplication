@using FoodDelivery.Domain.Domain
@{
    ViewData["Title"] = "Home Page";
}

@{
    var categories = ViewBag.Categories as List<Category>;
}

<section id="categories" class="section pt-5 categories-section">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="fw-bold text-salmon">Popular Categories</h2>
            <p class="text-muted fs-5">Discover food options from your favorite categories</p>
        </div>
        </div>
        <div class="row g-4">
            @foreach (var category in categories)
            {
                <div class="col-lg-2 col-md-4 col-sm-6">
                    <a asp-controller="Categories" asp-action="Details" asp-route-id="@category.Id" class="text-decoration-none">
                        <div class="card shadow-sm h-100 border-0">
                            <img class="card-img-top" src="@category.Image" alt="@category.Name" style="height: 150px; object-fit: cover;">
                            <div class="card-body text-center">
                                <h6 class="card-title text-dark fw-bold">@category.Name</h6>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</section>


<style>
    body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f9fa;
    color: #333;
    line-height: 1.6;
    margin: 0;
    padding: 0;
}

.categories-section .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border-radius: 10px;
    overflow: hidden;
    background: #fff;
    border: 1px solid #e0e0e0;
}
.categories-section .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
}
.categories-section .card-img-top {
    border-bottom: 1px solid #e0e0e0;
}

.section-header h2 {
    font-size: 2.5rem;
    font-weight: bold;
    color: #007bff;
}
.section-header p {
    color: #6c757d;
    font-size: 1.1rem;
}
.text-salmon {
        color: #B3C8CF !important; 
    }

</style>

