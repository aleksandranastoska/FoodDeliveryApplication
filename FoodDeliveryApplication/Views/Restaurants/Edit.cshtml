@model FoodDelivery.Domain.Domain.Restaurant

@{
    ViewData["Title"] = "Edit";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .edit-container {
        margin: 50px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 600px;
    }

    h1 {
        text-align: center;
        color: #5d6d7e;
        margin-bottom: 20px;
        font-size: 28px;
    }

    h4 {
        text-align: center;
        color: #7b8c99;
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        color: #5d6d7e;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 4px;
        padding: 10px;
        font-size: 14px;
        background-color: #f9f9f9;
    }

    .form-control:focus {
        border-color: #b3c8cf;
        box-shadow: 0 0 8px rgba(179, 200, 207, 0.3);
    }

    .text-danger {
        font-size: 12px;
        color: #e74c3c;
    }

    .btn-primary {
        width: 100%;
        font-size: 16px;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 4px;
        background-color: #89a8b2;
        border: none;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #72929e;
        transform: translateY(-2px);
    }

    .btn-danger {
        display: block;
        width: 100%;
        font-size: 14px;
        padding: 8px 20px;
        text-align: center;
        background-color: #e74c3c;
        border: none;
        color: #fff;
        border-radius: 4px;
        margin-top: 10px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-danger:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    a {
        color: #3498db;
        text-decoration: none;
        font-size: 14px;
    }

    a:hover {
        text-decoration: underline;
    }

    
</style>

<div class="edit-container">
    <h1>Edit</h1>
    <h4>Restaurant</h4>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Latitude" class="control-label"></label>
                    <input asp-for="Latitude" class="form-control" />
                    <span asp-validation-for="Latitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Longitude" class="control-label"></label>
                    <input asp-for="Longitude" class="form-control" />
                    <span asp-validation-for="Longitude" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryTime" class="control-label">Delivery Time</label>
                    <input asp-for="DeliveryTime" class="form-control" />
                    <span asp-validation-for="DeliveryTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkingFrom" class="control-label">Working From</label>
                    <input asp-for="WorkingFrom" class="form-control" />
                    <span asp-validation-for="WorkingFrom" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkingTo" class="control-label">Working To</label>
                    <input asp-for="WorkingTo" class="form-control" />
                    <span asp-validation-for="WorkingTo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
            <p><a class="btn btn-danger" asp-controller="Restaurants" asp-action="Delete" asp-route-id="@Model.Id">Delete</a></p>
        </div>
    </div>
    <div class="text-center mt-3">
        <a asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
